<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/startup">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80ssp"
        android:src="@drawable/logo360"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardBackgroundColor="@color/appColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/_20sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_background"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="20dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_19ssp"
                android:letterSpacing="0.04"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingStart="@dimen/_10sdp"
                android:layout_margin="@dimen/_16sdp"
                android:gravity="start"
                android:text="Keep your pool safe and \nwell-managed anytime,\nanywhere"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/getStarted"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Let's Start"
                android:textColor="@color/appColor"
                android:layout_marginBottom="40dp"
                android:background="@drawable/rounded_black_background"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>